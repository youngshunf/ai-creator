{
  "name": "ai-creator-monorepo",
  "private": true,
  "packageManager": "pnpm@10.10.0",
  "scripts": {
    "prepare": "husky",
    "dev:desktop": "pnpm --filter creatorflow-desktop dev",
    "dev:mobile": "pnpm --filter mobile-app dev:h5",
    "build:desktop": "pnpm --filter creatorflow-desktop build",
    "build:mobile": "pnpm --filter mobile-app build:h5",
    "lint": "pnpm -r lint",
    "format": "prettier --write .",
    "commit": "cz"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.0.0",
    "@commitlint/config-conventional": "^19.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "cz-conventional-changelog": "^3.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
